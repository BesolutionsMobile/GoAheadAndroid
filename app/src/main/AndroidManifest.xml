<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.goahead"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:windowSoftInputMode="adjustResize|stateHidden"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.view.login" />
        <activity android:name=".view.view.select" />
        <activity android:name=".view.view.categories" />
        <activity android:name=".view.view.cat" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_id" />

        <activity android:name=".view.view.signup" />
        <activity android:name=".view.view.splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.view.favourite" />
        <activity android:name=".view.view.mostAdded" />
        <activity android:name=".view.view.familiesProduces" />
        <activity android:name=".view.view.familiesProducts" />
        <activity android:name=".view.view.productDetails" />
        <activity android:name=".view.view.userProfileEnglish" />
        <activity android:name=".view.view.addNewProduct" />
        <activity android:name=".view.view.seller" />
        <activity android:name=".view.view.offers" />
        <activity android:name=".view.view.myProducts" />
        <activity android:name=".view.view.search"></activity>
    </application>

</manifest>