<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    tools:context=".view.view.search">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingLeft="@dimen/_5sdp"
    android:background="@color/projectbackground"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="3">
    <Button
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_margin="@dimen/_5sdp"
    android:text="@string/categories"
        android:textStyle="bold"
        android:textColor="@color/projectbackground"
        android:textSize="@dimen/_10sdp"
    android:background="@drawable/searchbackground"
    android:layout_height="@dimen/_30sdp" />
    <Button
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_margin="@dimen/_5sdp"
        android:text="Sellers"
        android:textStyle="bold"
        android:textColor="@color/projectbackground"
        android:textSize="@dimen/_10sdp"
        android:background="@drawable/searchbackground"
        android:layout_height="@dimen/_30sdp" />
    <Button
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_5sdp"
        android:text="Products"
        android:textColor="@color/projectbackground"
        android:textSize="@dimen/_10sdp"
        android:background="@drawable/searchbackground"
        android:layout_height="@dimen/_30sdp" />

</LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Search"
        android:gravity="center"
        android:background="@drawable/backdrawblesearch"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/frag"></FrameLayout>
</LinearLayout>