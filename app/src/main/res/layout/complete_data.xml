<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="right"
        android:src="@drawable/cancel"
        android:id="@+id/cancel"
        android:layout_marginRight="@dimen/_10sdp"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Complete Product Information To Add"
        android:gravity="center"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/projectbackground"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/databackground"
        android:hint="Product Name"
        android:id="@+id/productname"
        android:layout_marginLeft="@dimen/_10sdp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:paddingLeft="@dimen/_10sdp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/databackground"
        android:hint="Price"
        android:id="@+id/price"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:paddingLeft="@dimen/_10sdp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/databackground"
        android:gravity="top"
        android:paddingTop="@dimen/_10sdp"
        android:hint="Descripition"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:id="@+id/productDescripition"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:paddingLeft="@dimen/_10sdp"
        />
    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:textSize="@dimen/_12ssp"
        android:text="Submit"
        android:id="@+id/submit"
        android:background="@drawable/buttonbackcolor"
        android:layout_marginBottom="@dimen/_20sdp"
        />
</LinearLayout>
</android.support.v7.widget.CardView>